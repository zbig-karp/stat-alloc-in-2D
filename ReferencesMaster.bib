	doi = {10.1542/peds.2005-0187},
	eprint = {https://publications.aap.org/pediatrics/article-pdf/117/5/1568/1070412/zpe00506001568.pdf},
	issn = {0031-4005},
	journal = {Pediatrics},
	month = {05},
	number = {5},
	pages = {1568-1574},
	title = {{Do Bullied Children Get Ill, or Do Ill Children Get Bullied? A Prospective Cohort Study on the Relationship Between Bullying and Health-Related Symptoms}},
	url = {https://doi.org/10.1542/peds.2005-0187},
	volume = {117},
	year = {2006},
	bdsk-url-1 = {https://doi.org/10.1542/peds.2005-0187}}

